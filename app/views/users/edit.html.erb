<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
<div class="form-group">
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, class: "form-control", id:"inputName", placeholder:""%>
</div>

<div class="form-group">
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %><br>
</div>
  
<div class="form-group">
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, class: "form-control", id:"inputIntroduction", placeholder:""%><br>
</div>

<div class="form-group">
  <%= f.submit "Update User", class: "btn btn-secondary" %>
</div>
<% end %>

