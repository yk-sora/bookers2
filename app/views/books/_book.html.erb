<%# book.each do |book| %>
      <h2>User info</h2>
      
      <table class='table'>
        <tr>
          <%= image_tag book.get_profile_image(100,100) %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= book.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= book.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(book.id), class: "btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %>
      </div>
      
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, url: '/books', method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title , class: "form-control" %>
        
        <h4>Opinion</h4>
        <%= f.text_area :body , class: "form-control" %>
        
        <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
      <% end %>